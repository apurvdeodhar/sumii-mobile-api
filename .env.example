# Sumii Mobile API - Environment Variables Example
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sumii_dev

# =============================================================================
# MISTRAL AI (Required)
# =============================================================================
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_ORG_ID=your-mistral-org-id
MISTRAL_LIBRARY_ID=your-mistral-library-id

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
SECRET_KEY=development-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# AWS S3 (For document/PDF storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
S3_BUCKET=sumii-local-pdfs

# =============================================================================
# AWS SES (For email sending - optional for local dev)
# =============================================================================
SES_FROM_EMAIL=noreply@sumii.de
FRONTEND_URL=http://localhost:3000

# =============================================================================
# GOOGLE OAUTH (Optional)
# =============================================================================
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# SUMII-ANWALT INTEGRATION
# =============================================================================
ANWALT_API_BASE_URL=http://localhost:8001
# ANWALT_API_KEY=your-webhook-api-key

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
